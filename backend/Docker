# Backend Dockerfile
FROM golang:1.22-alpine

# Set working directory
WORKDIR /app

# Copy go.mod and go.sum files first (for caching)
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the Go binary
RUN go build -o main .

# Expose backend port
EXPOSE 8080

# Load environment variables at runtime (from .env)
CMD ["./main"]
